    <Transactions>
      <Transaction>
' . $transaction . '
      </Transaction>
    </Transactions>
  </RequestData>
  <RequestAuth>
    <UserPass>
      <User>' . check_plain(variable_get('uc_payflowpro_user', '')) . '</User>
      <Password>' . check_plain(variable_get('uc_payflowpro_password', '')) . '</Password>
    </UserPass>
  </RequestAuth>
