                    </BillTo>
                  </RPData>
                </Add>
              </RecurringProfile>
            </RecurringProfiles>
          </RequestData>
          <RequestAuth>
            <UserPass>
              <User>user</User>
              <Password>password</Password>
            </UserPass>
          </RequestAuth>
';
  return $xml;
}

